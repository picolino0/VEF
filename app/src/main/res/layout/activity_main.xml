<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorPrimary"
    android:id="@+id/main_root">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginTop="72dp"
            android:layout_marginBottom="48dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:contentDescription="@string/logo"
            android:src="@mipmap/ic_launcher"
            android:alpha="0"
            android:id="@+id/main_logo" />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:alpha="0"
            android:id="@+id/main_roomcode_layout">
            <EditText android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="@string/roomcode"
                android:alpha="0"
                android:id="@+id/main_roomcode" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:alpha="0"
            android:id="@+id/main_passcode_layout">
            <EditText android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/passcode"
                android:inputType="number"
                android:alpha="0"
                android:id="@+id/main_passcode" />
        </android.support.design.widget.TextInputLayout>
        <android.support.v7.widget.AppCompatButton
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="48dp"
            android:text="@string/enter_room"
            android:enabled="false"
            android:alpha="0"
            android:id="@+id/main_enter" />
    </LinearLayout>
</ScrollView>